# User Service Configuration
USER_SERVICE_PORT=3001

# Database Configuration (MySQL)
USER_DATABASE_NAME=kabi_user
DATABASE_USER=kabi_user
DATABASE_PASS=kabi_password
DATABASE_HOST=localhost
DATABASE_PORT=3306

# JWT Configuration (RS256)
# For production: Set JWT_PRIVATE_KEY as environment variable with full PEM content
# JWT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nMIIE...full_key_content...\n-----END PRIVATE KEY-----"
# Leave blank to use file: ../../../keys/private_key.pem
JWT_PRIVATE_KEY=

# Refresh Token (still using HS256)
JWT_SECRET_REFRESH=your-super-secret-refresh-key-here
EXPIRES_IN_ACCESS_TOKEN=1h
EXPIRES_IN_REFRESH_TOKEN=7d

SECRET_VERIFY_EMAIL=your_verify_email_secret

# Client Configuration
CLIENT_URL=http://localhost:3000

# Email Configuration
AUTH_EMAIL=your_email@gmail.com
AUTH_PASS=your_app_password